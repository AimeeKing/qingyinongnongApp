<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardElevation="2dp"
    android:layout_marginTop="4dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/shucai"
                android:id="@+id/imageView" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="进口圆茄产量丰富"
                android:textSize="14sp"
                android:textColor="@color/title_cardview"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/describ"
                android:textSize="12sp"
                android:textColor="@color/describ_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goods_describ"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/title"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:id="@+id/user_img"
                android:src="@drawable/page4_icon1"
                android:layout_alignBottom="@+id/title"
                android:layout_toStartOf="@+id/user" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user"
                android:text="小王"
                android:textSize="12sp"
                android:textColor="@color/describ_cardview"
                android:layout_alignBottom="@+id/user_img"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="2dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/page14_icon4"
                android:layout_toEndOf="@id/imageView"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售"
                android:gravity="center"
                android:layout_toRightOf="@id/imageView"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@id/imageView"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="36dp"
                />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/have_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/had_sold"
                android:text="2329件"
                android:gravity="center"
                android:layout_toRightOf="@id/imageView"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@id/imageView"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="65dp"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/page14_icon3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:id="@+id/tag"
            android:src="@drawable/page14_icon1"
            />
    </FrameLayout>
</android.support.v7.widget.CardView>